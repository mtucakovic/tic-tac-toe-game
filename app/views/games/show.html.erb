<div class='game' data-controller="game" data-game-id="<%= params[:id] %>" data-game-symbol="<%= params[:symbol] %>">
    <h1>tic-tac-toe</h1>
    <div data-game-target="container">
        <!-- Game content will be rendered here -->
    </div>
    <button class='button' onclick="newGame()">New Game</button>
</div>

<script>
// use window.location.href instead of regular link_to to close current websocket connection1
function newGame() {
  var name = "<%= j(params[:name]) %>";
  var newUrl = "/?name=" + encodeURIComponent(name);
  window.location.href = newUrl;
}
</script>